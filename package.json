{
  "name": "bun-mikro-orm",
  "description": "A minimal demonstration project with Bun and MikroORM",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run .",
    "build": "bun build ./src/index.ts --target=bun --outdir=app --external @mikro-orm/core --external @mikro-orm/mysql --external mysql2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/lib/db/cli.ts"
    ]
  },
  "devDependencies": {
    "bun-types": "latest",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@mikro-orm/better-sqlite": "^5.8.0",
    "@mikro-orm/cli": "^5.8.0",
    "@mikro-orm/core": "^5.8.0",
    "@mikro-orm/mysql": "^5.8.0",
    "@mikro-orm/reflection": "^5.8.0",
    "mysql2": "^3.6.1",
    "reflect-metadata": "^0.1.13"
  }
}
